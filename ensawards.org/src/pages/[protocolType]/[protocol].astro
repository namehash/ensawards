---
import { ProtocolTypes } from "../../types/bestPractices";
import { PROTOCOLS } from "../../data/protocols";
import {
  getContractNamingScoresByProtocolType,
  getProtocolBySlug,
  getProtocolTypeBySlug,
} from "../../utils/dataAccess";
import { Contract } from "../../types/contracts";
import { CONTRACTS } from "../../data/contracts";
import { EnsDaoIcon } from "../../components/atoms/icons/ens-integrating-entities/dao-protocols/EnsDaoIcon";
import DataLoadingError from "../../components/organisms/DataLoadingError.astro";
import SubpageHero from "../../components/molecules/SubpageHero.astro";
import {
  ChainIcon,
  EnsIcon,
  getChainName,
  SUPPORTED_CHAINS,
  TwitterIcon,
} from "@namehash/namehash-ui";
import ContractCard from "../../components/atoms/cards/ContractCard.astro";
import Layout from "../../layouts/Layout.astro";
import ItemsList from "../../components/molecules/ItemsList.astro";
import GlobeIcon from "../../components/atoms/icons/GlobeIcon.astro";
import ContractNamingBanner from "../../components/atoms/ContractNamingBanner.astro";
import EnscribeIcon from "../../components/atoms/icons/EnscribeIconLight.astro";
import EnsAwardsScore from "../../components/atoms/EnsAwardsScore.astro";
import SuggestionCard from "../../components/atoms/cards/SuggestionCard.astro";
import { sortByResolutionStatus } from "../../contract-pipelines/sorting";
import { cn } from "../../utils/tailwindClassConcatenation";
import { getENSNameFieldStyles } from "../../utils/styles";
import { Protocol } from "../../types/protocols";
export function getStaticPaths() {
  const staticPaths = [];

  Object.values(ProtocolTypes).forEach((protocolType) => {
    const relevantProtocols = PROTOCOLS.filter(
      (protocol) => protocol.protocolType === protocolType,
    );
    relevantProtocols.forEach((protocol) =>
      staticPaths.push({
        params: {
          protocolType: protocolType.toLowerCase(),
          protocol: protocol.slug,
        },
      }),
    );
  });

  return staticPaths;
}

const { protocolType, protocol } = Astro.params;

const resolvedProtocolType = getProtocolTypeBySlug(protocolType);

// The default values should never be used. Only introduced for type safety.
let resolvedProtocol: Protocol | undefined = undefined;
let protocolContracts: Contract[] = [];
let protocolScore = 0;
let ProtocolIcon = EnsDaoIcon;

if (resolvedProtocolType) {
  resolvedProtocol = getProtocolBySlug(resolvedProtocolType, protocol);
}

if (resolvedProtocol && resolvedProtocolType) {
  protocolContracts = CONTRACTS.filter((contract) => contract.protocol.id === resolvedProtocol.id);
  ProtocolIcon = resolvedProtocol.icon;
  protocolScore =
    getContractNamingScoresByProtocolType(resolvedProtocolType)[resolvedProtocol.id] ?? 0;
}
---

{
  resolvedProtocol === undefined || resolvedProtocolType === undefined ? (
    // theoretically, because of Astro's build-time page generation, this should never happen
    <DataLoadingError />
  ) : (
    <Layout
      pageMetadata={{
        title: `ENSAwards: ${resolvedProtocol.name} ENS Integration Benchmarks`,
        description: resolvedProtocol.description,
        url: `https://ensawards.org/${resolvedProtocolType.toLowerCase()}/${resolvedProtocol.slug}`,
        ogImage: resolvedProtocol.ogImagePath,
        twitterImage: resolvedProtocol.twitterOgImagePath,
      }}>
      <SubpageHero
        header={resolvedProtocol.name}
        description={resolvedProtocol.description}
        breadcrumbs={[
          "ENS leaderboards",
          `${resolvedProtocolType} leaderboard`,
        ]}>
        <ProtocolIcon
          slot="icon"
          className="w-[60px] h-[60px] shrink-0 rounded-lg"
        />
        <div
          slot="ctaContent"
          class="flex flex-row flex-nowrap justify-start items-center gap-2">
          <a
            href={resolvedProtocol.socials.website}
            rel="noreferrer"
            target="_blank">
            <GlobeIcon className="hover:text-white text-gray-400 transition-all duration-200" />
          </a>
          <a
            href={resolvedProtocol.socials.twitter}
            rel="noreferrer"
            target="_blank">
            <TwitterIcon className="hover:text-white text-gray-400 transition-all duration-200" />
          </a>
          {resolvedProtocol.socials.ens && (
            <a
              href={`https://app.ens.domains/${encodeURIComponent(resolvedProtocol.socials.ens)}`}
              rel="noreferrer"
              target="_blank">
              <EnsIcon
                width={18}
                height={18}
                className="hover:text-white text-gray-400 transition-all duration-200"
              />
            </a>
          )}
        </div>
        <EnsAwardsScore
          slot="largerHeroItem"
          score={protocolScore}
          label="ENSAwards score"
        />
      </SubpageHero>
      <section class="w-full box-border h-fit flex flex-col flex-nowrap justify-start items-center max-sm:gap-6 gap-10 p-5 sm:py-[60px] sm:px-8">
        <ContractNamingBanner />
        <ItemsList
          header="Smart contract naming"
          containerStyles="gap-3 sm:gap-2">
          <a
            href="https://www.enscribe.xyz/"
            target="_blank"
            rel="noreferrer"
            slot="ctaButton"
            class="w-[225px] flex flex-row flex-nowrap justify-start items-center gap-3 px-4 py-2 bg-gray-50 rounded-lg border border-gray-200 hover:border-gray-300 text-sm text-gray-400 whitespace-nowrap hover:text-gray-500 font-normal leading-7 hover:shadow-xs transition duration-200">
            <span>Powered by</span>
            <EnscribeIcon />
          </a>
          {SUPPORTED_CHAINS.map((supportedChain, idx) => {
            const contractsOnChain = protocolContracts.filter(
              (contract) =>
                contract.cachedIdentity.contract.chain.id === supportedChain.id,
            );
            if (contractsOnChain.length === 0) {
              return null;
            }

            // Sort contracts by resolution status: PrimaryNamed, ForwardNamed, then Unnamed
            const sortedContracts = sortByResolutionStatus(contractsOnChain);

            return (
              <>
                <div
                  class={cn(
                    "h-fit w-full flex flex-row flex-nowrap justify-start items-center gap-4 pb-1 sm:pb-4",
                    idx > 0 && "pt-1 sm:pt-8",
                  )}>
                  <>
                    <span class="w-10 h-10 bg-white flex flex-col justify-center items-center rounded-lg border border-gray-200">
                      <ChainIcon chainId={supportedChain.id} />
                    </span>
                    <h4 class="text-xl text-black leading-normal font-semibold">
                      {getChainName(supportedChain.id)}
                    </h4>
                  </>
                </div>
                {sortedContracts.map((contract) => (
                  <ContractCard
                    contract={contract}
                    className={{
                      ensName: cn(getENSNameFieldStyles(resolvedProtocol.id)),
                    }}
                  />
                ))}
              </>
            );
          })}
          <div class="w-full h-fit pt-1 sm:pt-8">
            <SuggestionCard whatsSuggested="contract" />
          </div>
        </ItemsList>
      </section>
    </Layout>
  )
}
