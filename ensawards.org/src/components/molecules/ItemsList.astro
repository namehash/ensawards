---
import {cn} from "../../lib/utils";
import {shadcnButtonVariants} from "../shadcn/shadcnButtonStyles";
export interface ItemsListProps {
  header: string;
  numberOfItems: number;
  seeAllLink?: string; //might change to URL or change name to not be misleading - TODO: replace <a> tag with shadcn/ui button component - find out how to make it a link if astro doesn't have support for that
}

const { header, numberOfItems, seeAllLink }: ItemsListProps = Astro.props;
---

<div class="w-full max-w-[1216px] box-border h-fit flex flex-col flex-nowrap justify-start items-center gap-6">
    <div class="w-full h-fit flex flex-row flex-nowrap justify-between items-center self-stretch">
        <h2 class="text-2xl leading-normal font-semibold text-black">{header} <span class="text-gray-400">({numberOfItems})</span></h2>
        {seeAllLink && <a href={seeAllLink} class={cn(shadcnButtonVariants({variant: "ghost", size: "default", className: "cursor-pointer rounded-full"}))}>See all</a>}
    </div>
    <div class="w-full h-fit flex flex-row flex-wrap justify-start items-start max-[1215px]:justify-center gap-5 self-stretch">
        <slot />
    </div>
</div>