---
import { cn } from "../../utils/tailwindClassConcatenation";
import { shadcnButtonVariants } from "../ui/shadcnButtonStyles";
export interface ItemsListProps {
  header?: string;
  numberOfItems?: number; //is optional and temporarily removed from the designs, will be turned back on when there is enough elements in the data
  linkData?: {
    link: string;
    text: string;
  };
  additionalInfo?: string;
  containerStyles?: string;
}

const { header, numberOfItems, linkData, additionalInfo, containerStyles }: ItemsListProps =
  Astro.props;
---

<div
  class="w-full max-w-[1216px] box-border h-fit flex flex-col flex-nowrap justify-start items-center gap-3 sm:gap-6">
  {
    header && (
      <div class="w-full h-fit flex flex-row flex-nowrap justify-between items-center self-stretch">
        <h2 class="text-xl sm:text-2xl leading-normal font-semibold text-black">
          {header}
          {numberOfItems && (
            <span class="text-gray-400">({numberOfItems})</span>
          )}
        </h2>
        {linkData ? (
          <a
            href={linkData.link}
            class={cn(
              shadcnButtonVariants({
                variant: "ghost",
                size: "default",
                className: "cursor-pointer rounded-full text-base",
              }),
            )}>
            {linkData.text}
          </a>
        ) : (
          <slot name="ctaButton" />
        )}
      </div>
    )
  }
  {
    additionalInfo && (
      <p class="text-base leading-normal font-normal text-muted-foreground text-left self-stretch">
        {additionalInfo}
      </p>
    )
  }
  <div
    class={cn(
      "w-full h-fit flex flex-row flex-wrap justify-start items-start max-[1215px]:justify-center gap-4 sm:gap-5 self-stretch",
      containerStyles,
    )}>
    <slot />
  </div>
</div>
