---
export interface BestPracticeCardProps {
    name: string;
    description: string;
    viewReviewsLink: string;
    appsPassed: number;
    passingScore: number;
}

const {name, description, viewReviewsLink, appsPassed, passingScore} : BestPracticeCardProps = Astro.props;
---

<div class="w-fit max-w-[598px] h-fit min-h-[223px] box-border flex flex-col flex-nowrap justify-center items-start gap-4 px-6 pt-6 pb-4 rounded-2xl border border-gray-200">
    <div class="flex flex-col flex-nowrap justify-center items-start gap-5 self-stretch">
        <slot name="icon" />
        <div class="flex flex-col flex-nowrap justify-center items-start gap-2 self-stretch">
            <div class="w-fit flex flex-nowrap flex-row justify-start items-center gap-3">
                <h3 class="text-lg leading-normal font-semibold text-black">{name}</h3>
                <slot name="badge"/>
            </div>
            <p class="text-muted-foreground text-base leading-normal font-normal">{description}</p>
        </div>
    </div>
    <div class="bg-gray-200 h-[1px] self-stretch" />
    <div class="flex flex-row flex-nowrap justify-between items-start self-stretch">
        <a href={viewReviewsLink} class="flex flex-row justify-center items-center gap-2 px-4 py-2 bg-neutral-100 shadow-xs rounded-full text-sm leading-normal font-medium">View reviews</a>
        <div class="flex flex-nowrap flex-row justify-start items-center gap-6">
            <div class="flex flex-col flex-nowrap justify-center items-start gap-0">
                <p class="text-muted-foreground text-sm leading-normal font-normal">Apps passed</p>
                <p class="text-sm leading-normal font-semibold text-accent-foreground">{appsPassed}</p>
            </div>
            <div class="flex flex-col flex-nowrap justify-center items-start gap-0">
                <p class="text-muted-foreground text-sm leading-normal font-normal">Passing score</p>
                <p class="text-sm leading-normal font-semibold text-emerald-600">{passingScore}%</p>
            </div>
        </div>
    </div>
</div>
