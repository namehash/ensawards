---
import { cn } from "../../../utils/tailwindClassConcatenation";
import { shadcnButtonVariants } from "../../ui/shadcnButtonStyles";
import { normalizeLeaderboardSnippetPhrase } from "../../../utils/textModifications";

interface LeaderboardSnippetCardProps {
  name: string;
  description: string;
  link: string;
}

const { name, description, link }: LeaderboardSnippetCardProps = Astro.props;
---

<a
  href={link}
  class="w-full min-lg:w-[calc(50%-12px)] max-w-[596px] h-fit min-h-[175px] box-border
        flex flex-col flex-nowrap justify-center items-start gap-3 sm:gap-4 p-4 sm:px-6 sm:pt-6 pb-4
        rounded-2xl border border-gray-200 hover:border-gray-300 hover:shadow-xs cursor-pointer bg-white">
  <div
    class="flex flex-col flex-nowrap justify-center items-start gap-3 sm:gap-2 self-stretch">
    <h3 class="text-lg leading-normal font-semibold text-black">{name}</h3>
    <p
      class="text-muted-foreground text-sm sm:text-base leading-normal font-normal">
      {description}
    </p>
  </div>
  <div class="bg-gray-200 h-[1px] self-stretch"></div>
  <div
    class="flex flex-col-reverse sm:flex-row flex-wrap justify-center max-sm:gap-3 sm:justify-between
                items-start self-stretch">
    <button
      aria-disabled={false}
      class={cn(
        shadcnButtonVariants({
          variant: "secondary",
          size: "default",
          className: "cursor-pointer rounded-full max-sm:self-stretch",
        }),
      )}>View {normalizeLeaderboardSnippetPhrase(name)}</button
    >
    <slot name="bestResultsIcons" />
  </div>
</a>
