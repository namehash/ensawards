---
import DollarEnsIcon from "../../components/atoms/icons/DollarEnsIcon.astro";
import { cn } from "../../utils/tailwindClassConcatenation";
import { shadcnButtonVariants } from "../ui/shadcnButtonStyles";
import ChevronRightIcon from "./icons/ChevronRightIcon.astro";
---

<a
  href="https://discuss.ens.domains/t/temp-check-ens-contract-naming-season/21402"
  target="_blank"
  rel="noreferrer noopener"
  class="max-w-[1216px] w-full h-fit sm:h-[88px] flex flex-row flex-nowrap justify-between items-center bg-[linear-gradient(90deg,#F9D25A_0%,#F4BF1A_100%)]
  hover:bg-[linear-gradient(0deg,rgba(255,255,255,0.20)_0%,rgba(255,255,255,0.20)_100%),linear-gradient(90deg,#F9D25A_0%,#F4BF1A_100%)] transition-all duration-400
  py-2 pl-3 pr-4 sm:p-4 sm:px-6 rounded-lg">
  <div
    class="flex flex-row flex-nowrap justify-start items-center gap-[10px] sm:gap-5">
    <DollarEnsIcon className="flex-shrink-0" />
    <div>
      <h4
        class="text-lg max-sm:text-sm font-semibold leading-7 max-sm:leading-6">
        ENS Contract Naming Season
      </h4>
      <p
        class="text-sm max-sm:text-xs text-black/50 font-normal leading-7 max-sm:leading-6">
        Up to 10,000 $ENS in awards
      </p>
    </div>
  </div>
  <button
    class={cn(
      shadcnButtonVariants({
        variant: "ghost",
        size: "default",
        className: "cursor-pointer rounded-full hover:bg-black/10 max-sm:hidden",
      }),
    )}>Learn more</button
  >
  <ChevronRightIcon className="block sm:hidden w-6 h-6 hover:opacity-60" />
</a>
