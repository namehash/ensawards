---
import {cn} from "../../lib/utils";
export interface BadgeProps {
    text: string;
    className: string;
    slot:string;
}

const {text, className, slot}:BadgeProps = Astro.props;
---
<span class={cn("w-fit flex flex-row flex-nowrap justify-center items-center px-2 py-[2px] rounded-md text-xs leading-normal font-semibold", className)} slot={slot}>{text}</span>
