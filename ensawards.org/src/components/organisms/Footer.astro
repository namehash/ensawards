---
import EfpIcon from "../atoms/icons/EfpIcon.astro";
import EmailIcon from "../atoms/icons/EmailIcon.astro";
import EnsServiceProviderIcon from "../atoms/icons/EnsServiceProviderIcon.astro";
import FarcasterIcon from "../atoms/icons/FarcasterIcon.astro";
import GitHubIcon from "../atoms/icons/GitHubIcon.astro";
import NameHashLabsIcon from "../atoms/icons/NameHashLabsIcon.astro";
import TelegramIcon from "../atoms/icons/TelegramIcon.astro";
import TwitterIcon from "../atoms/icons/TwitterIcon.astro";

const footerProducts = [
  {
    name: "ENSNode",
    href: "https://ensnode.io/",
  },
  {
    name: "ENSRainbow",
    href: "https://ensrainbow.io",
  },
  {
    name: "ENSAdmin",
    href: "https://ensadmin.io",
  },
  {
    name: "ENSv2 Referral Programs",
    href: "https://namehashlabs.org/ens-v2-referral-programs",
  },
  {
    name: "ENSAwards",
    href: "https://ensawards.org/",
  },
  {
    name: "NameGraph",
    href: "https://namegraph.dev",
  },
  {
    name: "NameAI",
    href: "https://nameai.io/",
  },
  {
    name: "NameGuard",
    href: "https://nameguard.io",
  },
  {
    name: "NameKit",
    href: "https://namekit.io",
  },
];

const footerResources = [
  {
    name: "Contact us",
    href: "https://namehashlabs.org/contact",
  },
  {
    name: "Careers",
    href: "https://namehashlabs.org/careers",
  },
  {
    name: "Partners",
    href: "https://namehashlabs.org/partners",
  },
  {
    name: "Brand assets",
    href: "https://namehashlabs.org/brand-assets",
  },
];
---

<section
  class="lg:px-[50px] px-5 flex items-center justify-center w-full border-t border-gray-200">
  <div
    class="pt-8 pb-5 flex flex-col gap-10 items-start justify-between w-full max-w-[1216px]">
    <div class="w-full gap-5 flex flex-col lg:flex-row lg:justify-between">
      <div class="flex flex-col gap-5">
        <NameHashLabsIcon />

        <p class="text-sm font-light text-gray-500 max-w-[339px] leading-6">
          Founded in 2022, Namehash Labs is dedicated to developing open source
          infrastructure that helps the Ethereum Name Service (ENS) Protocol
          grow.
        </p>

        <EnsServiceProviderIcon />
      </div>

      <div class="flex justify-start">
        <div class="flex flex-col w-[228px] pr-5">
          <span class="mb-2 text-sm font-semibold">Products</span>
          <ul class="flex flex-col">
            {
              footerProducts.map((product) => {
                return (
                  <li key={product.name} class="my-2">
                    <a
                      href={product.href}
                      target="_blank"
                      rel="noreferrer noopener"
                      class="transition cursor-pointer text-gray-500 hover:text-black text-sm">
                      {product.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>
        <div class="flex flex-col w-[228px]">
          <span class="mb-2 text-sm font-semibold">Resources</span>
          <ul class="flex flex-col">
            {
              footerResources.map((resource) => {
                return (
                  <li key={resource.name} class="my-2">
                    <a
                      href={resource.href}
                      target="_blank"
                      rel="noreferrer noopener"
                      class="transition cursor-pointer text-gray-500 hover:text-black text-sm">
                      {resource.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>
      </div>
    </div>

    <div
      class="lg:border-t lg:border-gray-200 w-full flex flex-col lg:flex-row lg:justify-between gap-5 pt-5">
      <p class="text-gray-500 text-sm leading-5 font-normal">
        © NameHash Labs. All Rights Reserved
      </p>

      <div class="flex gap-3">
        <a
          href="https://x.com/NamehashLabs"
          target="_blank"
          rel="noreferrer noopener"
          aria-label="Twitter">
          <TwitterIcon
            className="hover:text-black text-[#AFAFAF] transition-all duration-200"
          />
        </a>

        <a
          href="https://github.com/namehash"
          target="_blank"
          rel="noreferrer noopener"
          aria-label="Github">
          <GitHubIcon
            className="hover:text-black text-[#9CA3AF] transition-all duration-200"
          />
        </a>

        <a
          href="https://warpcast.com/namehash"
          target="_blank"
          rel="noreferrer noopener"
          aria-label="Farcaster">
          <FarcasterIcon
            className="hover:text-black text-[#9CA3AF] transition-all duration-200"
          />
        </a>

        <a
          href="https://efp.app/namehashlabs.eth"
          target="_blank"
          rel="noreferrer noopener"
          aria-label="EFP">
          <EfpIcon
            className="hover:text-black text-[#AFAFAF] transition-all duration-200 w-6 h-6"
          />
        </a>

        <a
          href="https://t.me/namehash"
          target="_blank"
          rel="noreferrer noopener"
          aria-label="Telegram">
          <TelegramIcon
            className="hover:text-black text-[#AFAFAF] transition-all duration-200"
          />
        </a>

        <a href="mailto:hello@namehashlabs.org" aria-label="Email">
          <EmailIcon
            className="hover:text-black text-[#9CA3AF] transition-all duration-200"
          />
        </a>
      </div>

      <div
        class="flex space-x-1 not-italic font-normal text-gray-500 text-sm xSmall:font-light">
        <span>
          Made with
          <span class="text-[#EF4444] mx-1">{"❤️"}</span>
          by
        </span>
        <a
          class="!text-black text-sm text-current underline decoration-current underline-offset-[4px] transition-all duration-200 hover:underline-offset-[2px]"
          href="https://namehashlabs.org/"
          target="_blank"
          rel="noreferrer noopener">
          NameHash Labs
        </a>
      </div>
    </div>
  </div>
</section>
